def greet(bot_name, birth_year):
    print(f"Hello! Welcome to SafeBank Virtual Assistant. I'm {bot_name}.")
    print(f"I've been here to help you since {birth_year}. Let's get started!")
def remind_name():
    print("Please, may I have your name?")
    name = input()
    print(f"Welcome, {name}! How can I assist you today?")
def show_menu():
    print("\n Chatbot:Please choose from the following options:")
    print("           1. How to open a bank account?")
    print("           2. What is eKYC and how to complete it?")
    print("           3. How to make an online payment?")
    print("           4. Exit")
def provide_info(choice):
    choice = choice.strip().lower()
    if choice in ["1", "how to open a bank account?", "open"]:
        print("\n Chatbot:To open a bank account:")
        print("           - Visit your nearest SafeBank branch or our website.")
        print("           - Fill out the account opening form with valid ID and address proof.")
        print("           - Submit your documents and complete the initial deposit.")
        print("           - Your account will be activated within 2-3 business days.\n")
    elif choice in ["2", "what is ekyc and how to complete it?", "ekyc", "kyc"]:
        print("\n Chatbot:About eKYC (Electronic Know Your Customer):")
        print("           - eKYC is a digital process to verify your identity online.")
        print("           - You will need your Aadhaar card or other valid government ID.")
        print("           - Follow the steps on our mobile app or website to upload documents and complete biometric verification.")
        print("           - eKYC allows you to open accounts and access services faster and more securely.\n")
    elif choice in ["3", "how to make an online payment?", "payment", "online"]:
        print('\n Chatbot:To make an online payment:')
        print('           - Log in to your SafeBank internet banking or mobile app.')
        print('           - Select the "Payments" or "Transfer" option.')
        print('           - Enter the beneficiary details and amount.')
        print('           - Authenticate the transaction using OTP or your transaction PIN.')
        print('           - The money will be transferred instantly or within a few hours depending on the method.\n')
    elif choice in ["4", "exit", "stop", "quit"]:
        print("\n Chatbot:Thank you for using SafeBank Virtual Assistant. Have a great day!")
        return True
    else:
        print("\n Chatbot:Invalid choice. Please select a valid option.\n")
    return False
greet('SafeBot', '2023')
remind_name()
while True:
    show_menu()
    user_choice = input("You:")
    if provide_info(user_choice):
        break
